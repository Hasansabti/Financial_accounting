<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bShow"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/contract" />

    <TextView
        android:id="@+id/muser"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxWidth="50dp"
        android:text="dsfdsfsdfdsgshjdfgsdjhafgsjhafgjhsadfvsjadffdsdsfgfsdbfjksaddhfjkdslahfljksahlkdsa"
        android:textAlignment="center"
        android:textColor="#000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/count_bg"
            android:backgroundTint="@color/colorAccent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mmoney"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:maxWidth="50dp"
        android:text="100"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/mType"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTintMode="add"
        android:foregroundTintMode="screen"
        android:tint="@color/colorUOn"
        android:tintMode="src_atop"
        app:srcCompat="@drawable/ic_downsquare" />
</LinearLayout>
